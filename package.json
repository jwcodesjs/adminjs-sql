{
  "name": "@adminjs/sql",
  "version": "2.2.2",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": "git@github.com:SoftwareBrothers/adminjs-sql.git",
  "author": "Rafal Dziegielewski <rafal.dzieg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "sql",
    "postgres",
    "adminjs",
    "admin panel",
    "database",
    "adapter"
  ],
  "description": "An official AdminJS adapter for SQL databases.",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "format": "pnpm exec biome check --apply .",
    "format-check": "pnpm exec biome check .",
    "release": "semantic-release",
    "test": "NODE_OPTIONS='--no-warnings' npm run test-postgres run && npm run test-mysql run",
    "test-postgres": "NODE_OPTIONS='--no-warnings' DIALECT=postgresql vitest",
    "test-mysql": "NODE_OPTIONS='--no-warnings' DIALECT=mysql2 vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/git": "^10.0.1",
    "@types/pg": "^8.10.0",
    "@vitest/coverage-istanbul": "^1.4.0",
    "adminjs": "^7.0.0",
    "dotenv": "^16.4.5",
    "husky": "^4.2.5",
    "rimraf": "^4.4.0",
    "semantic-release": "^20.1.3",
    "semantic-release-slack-bot": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@biomejs/biome": "^1.6.4",
    "knex": "^2.4.2",
    "mysql2": "^3.3.3",
    "pg": "^8.10.0"
  },
  "peerDependencies": {
    "adminjs": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
